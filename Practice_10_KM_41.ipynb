    "salary_list = [6.4, 9.35, 11.4, 14, 23.8, 28.15, 34.7]\n",
    "increase_rate = 0.30\n",
    "# Calculation of new salaries and indexation amounts using map and rounding to hundredths\n",
    "new_salaries = list(map(lambda x: round(x * (1 + increase_rate), 2), salary_list))\n",
    "increases = list(map(lambda x: round(x * increase_rate, 2), salary_list))\n",
    "# Table output\n",
    "print(\"**Salary table:**\\n\")\n",
    "for old, new, inc in zip(salary_list, new_salaries, increases):\n",
    "    print(f\"{old} {new} {inc}\")\n"

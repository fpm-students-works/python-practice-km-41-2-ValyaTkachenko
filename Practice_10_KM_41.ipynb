    "import numpy as np\n",
    "# List of years from 1900 to 2020 inclusive\n",
    "years = np.arange(1900, 2021, 1)\n",
    "# Checking the correctness of entering a numerical value\n",
    "def inputcheck(txt):\n",
    "    while True:\n",
    "        try:\n",
    "            return int(input(txt))\n",
    "        except ValueError:\n",
    "            print('Write a number') \n",
    "# Checking the correctness of the month entry (from 1 to 12)\n",
    "def monthcheck(txt):\n",
    "    while True:\n",
    "        month = inputcheck(txt)\n",
    "        if 1 <= month <= 12:\n",
    "            return month\n",
    "        print('Write a whole number from 1 to 12') \n",
    "# Leap year check\n",
    "def leapfinder(year):\n",
    "    return year % 400 == 0 or (year % 4 == 0 and year % 100 != 0)\n",
    "# Determination of the number of days in the specified month\n",
    "def dayfinder():\n",
    "    month = monthcheck('Write a month number (from 1 to 12): ')\n",
    "    year = inputcheck('Write a year: ')\n",
    "    daylist = [31, 29 if leapfinder(year) else 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31]\n",
    "    return daylist[month - 1]\n",
    "# Deduction of leap years from the list\n",
    "leap_years = list(filter(leapfinder, years))\n",
    "print(\"Leap years:\", leap_years)\n",
    "# Output of the number of days in a month\n",
    "print(f'The amount of days in chosen month and year is {dayfinder()}')\n"
   ]
  }
